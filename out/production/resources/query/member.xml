<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero100study.demo.mapper.MemberMapper">
    <!-- 로그인 -->
    <select id="getMemberAccount" resultType="com.zero100study.demo.domain.Member">
        SELECT * FROM Users
        WHERE Email = #{memberId};
    </select>

    <!-- 회원가입 -->
    <insert id="save" parameterType="com.zero100study.demo.domain.Member">
        INSERT INTO Users
            (NickName, Password, Email, CreateDate, m_grade_str)
        VALUES(#{mName}, #{memberPwd}, #{memberId}, #{mDate}, #{mGradeStr});
    </insert>
</mapper>